{
  "name": "spiral-packages/maintenance",
  "description": "Disable your application while it is updating or when you are performing maintenance.",
  "keywords": [
    "php",
    "package",
    "maintenance",
    "maintenance-mode",
    "spiral",
    "spiral-framework"
  ],
  "homepage": "https://github.com/spiralpackages/maintenance",
  "license": "MIT",
  "authors": [
    {
      "name": "butschster",
      "email": "butschster@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "spiral/serializer": "^3.0",
    "spiral/core": "^3.0",
    "spiral/cache": "^3.0",
    "spiral/boot": "^3.0",
    "spiral/console": "^3.0"
  },
  "require-dev": {
    "spiral/framework": "^3.0.x-dev",
    "phpunit/phpunit": "^9.5",
    "spiral/testing": "^2.0",
    "vimeo/psalm": "^4.9"
  },
  "autoload": {
    "psr-4": {
      "Spiral\\Maintenance\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spiral\\Maintenance\\Tests\\App\\": "tests/app",
      "Spiral\\Maintenance\\Tests\\": "tests/src"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "psalm": "vendor/bin/psalm --config=psalm.xml ./src"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "spiral/composer-publish-plugin": true
    }
  },
  "extra": {
    "spiral": {
      "bootloaders": [
        "Spiral\\Maintenance\\Bootloader\\MaintenanceBootloader"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
